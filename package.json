{
  "name": "ts-starter",
  "description": "Template repository for TypeScript Node.js Apps",
  "version": "x.y.z",
  "main": "build/main.js",
  "author": "Pegasus Spiele Verlags- und Medienvertriebsgesellschaft mbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegasusspiele/ts-starter.git"
  },
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "test": "jest . --verbose",
    "dev": "nodemon .  --signal SIGINT",
    "build": "rm -rf build; tsc",
    "start": "node .",
    "build-start": "rm -rf build; tsc; node ."
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "nodemon": "^2.0.9",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn build --sourceMap; yarn start"
  }
}
