{
  "name": "@pegabot/v5",
  "version": "5.0.3",
  "description": "The fifth iteration and second generation of @pegabot on Discord",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegabot/v5.git"
  },
  "license": "AGPL-3.0-only",
  "author": "The Pegabot authors",
  "main": "build/main.js",
  "scripts": {
    "actions": "act --rm",
    "build": "rm -rf build; tsc",
    "container:dev:build": "docker build -t pegabot:dev .",
    "container:dev:start": " docker run --name pegabot --env-file .env --rm --link redis:redis pegabot:dev",
    "dev": "nodemon .  --signal SIGINT",
    "i18n": "node i18n/scripts/generate.js",
    "prepare": "husky install",
    "start": "node .",
    "test": "jest . --verbose --passWithNoTests"
  },
  "nodemonConfig": {
    "exec": "yarn build --sourceMap; yarn start",
    "ext": "ts",
    "ignore": [
      "dist/*"
    ],
    "verbose": true,
    "watch": [
      "src/"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "@keyv/redis": "^2.3.6",
    "bent": "^7.3.12",
    "discord.js": "^14.0.3",
    "dotenv": "^16.0.1",
    "glob": "^8.0.3",
    "i18n": "^0.15.0",
    "keyv": "^4.3.0",
    "pretty-ms": "^7.0.1",
    "winston": "^3.7.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/bent": "^7.3.2",
    "@types/glob": "^7.2.0",
    "@types/i18n": "^0.13.2",
    "@types/jest": "^27.5.0",
    "@types/keyv": "^3.1.4",
    "@types/node": "16.x",
    "@types/yargs": "^17.0.10",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.16",
    "sort-json": "^2.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^26.5.6",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=16.x"
  }
}
