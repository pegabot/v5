{
  "name": "ts-starter",
  "description": "Template repository for TypeScript Node.js Apps",
  "version": "x.y.z",
  "main": "build/main.js",
  "author": "Pegasus Spiele Verlags- und Medienvertriebsgesellschaft mbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegasusspiele/ts-starter.git"
  },
  "engines": {
    "node": ">14.x"
  },
  "scripts": {
    "test": "jest . --verbose",
    "dev": "nodemon .  --signal SIGINT NODE_ENV=development",
    "build": "rm -rf build; tsc",
    "start": "NODE_ENV=production node .",
    "start:dev": "node .",
    "generateEnvTypes": "npx gen-env-types .env -o src/types/env.d.ts -e ."
  },
  "dependencies": {
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "puppeteer": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "nodemon": "^2.0.9",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn build --sourceMap; yarn start:dev"
  }
}
