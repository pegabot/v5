{
  "name": "v5",
  "description": "The fifth version of @pegabot on Discord",
  "version": "x.y.z",
  "main": "build/main.js",
  "author": "The Pegabot authors",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/pegabot/v5.git"
  },
  "engines": {
    "node": ">=16.x"
  },
  "scripts": {
    "test": "jest . --verbose --passWithNoTests",
    "dev": "nodemon .  --signal SIGINT",
    "build": "rm -rf build; tsc",
    "start": "node .",
    "container:dev:start": " docker run --name pegabot --env-file .env --rm --link redis:redis pegabot",
    "container:dev:build": "docker build -t pegabot .",
    "i18n": "node scripts/i18n/generate.js",
    "actions": "act --rm",
    "prepare": "husky install"
  },
  "dependencies": {
    "@keyv/redis": "^2.2.3",
    "bent": "^7.3.12",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "glob": "^7.2.0",
    "i18n": "^0.14.1",
    "keyv": "^4.1.1",
    "pretty-ms": "^7.0.1",
    "source-map-support": "^0.5.21",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/bent": "^7.3.2",
    "@types/glob": "^7.2.0",
    "@types/i18n": "^0.13.2",
    "@types/jest": "^27.4.1",
    "@types/keyv": "^3.1.3",
    "@types/node": "16.x",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.9",
    "ts-jest": "^26.5.6",
    "typescript": "^4.6.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn build --sourceMap; yarn start"
  }
}
