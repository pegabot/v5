{
  "name": "studip-people-searcher",
  "description": "Discord Bot which searches for people on @uni-giessen's Stud.Ip for you",
  "version": "x.y.z",
  "main": "build/main.js",
  "author": "Nico Finkernagel <nico@gruselhaus.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gruselhaus/studip-people-searcher.git"
  },
  "engines": {
    "node": ">=16.x"
  },
  "scripts": {
    "test": "jest . --verbose",
    "dev": "nodemon .  --signal SIGINT NODE_ENV=development",
    "build": "rm -rf build; tsc",
    "start": "NODE_ENV=production node .",
    "start:dev": "NODE_ENV=development node .",
    "generateEnvTypes": "npx gen-env-types .env -o src/types/env.d.ts -e .; sh ./scripts/injectHeader.sh",
    "actions": "act --rm"
  },
  "dependencies": {
    "@keyv/redis": "^2.2.1",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "i18n": "^0.13.3",
    "keyv": "^4.0.4",
    "puppeteer": "^13.0.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.2",
    "@types/jest": "^26.0.23",
    "@types/keyv": "^3.1.3",
    "@types/node": "16.x",
    "jest": "^26.6.3",
    "nodemon": "^2.0.9",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/"
    ],
    "ignore": [
      "dist/*"
    ],
    "ext": "ts",
    "exec": "yarn build --sourceMap; yarn start:dev"
  }
}
